<p id="notice"><%= notice %></p>

<h1>Currency Exchange Pairs</h1>

<table>
  <thead>
    <tr>
      <th>Base currency</th>
      <th>Target currency</th>
      <th>Number of weeks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currency_exchange_pairs.each do |currency_exchange_pair| %>
      <tr>
        <td><%= currency_exchange_pair.base_currency %></td>
        <td><%= currency_exchange_pair.target_currency %></td>
        <td><%= currency_exchange_pair.number_of_weeks %></td>
        <td><%= link_to 'Show', currency_exchange_pair %></td>
        <td><%= link_to 'Edit', edit_currency_exchange_pair_path(currency_exchange_pair) %></td>
        <td><%= link_to 'Destroy', currency_exchange_pair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

